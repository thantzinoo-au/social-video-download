# Environment Configuration Template
# Copy this file to .env and update with your values

# API Security
# IMPORTANT: Change this to a strong, random key in production!
# Generate with: openssl rand -base64 32
API_SECRET_KEY=1234567890

# PostgreSQL Database Configuration
POSTGRES_DB=social_video_db
POSTGRES_USER=videouser
POSTGRES_PASSWORD=changeme123

# Default Admin User
# Admin user will be created automatically on first startup
# Admin uses session-based authentication (no API key needed)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=

# Application Settings
DEBUG=False

# Download Configuration
MAX_FILE_SIZE=314572800  # 300MB in bytes
YTDLP_TIMEOUT=300  # 5 minutes

# Docker User Configuration (optional)
# Set these to match your user ID and group ID to avoid permission issues
# Find with: id -u (UID) and id -g (GID)
UID=1000
GID=1000
